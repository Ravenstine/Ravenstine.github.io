<!doctype html>
<html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "KPCC Design System" %></title>
    <meta name="description" content="{% if page.excerpt %}{{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description }}{% endif %}">

    <%= stylesheet_link_tag 'scpr-style.css' %>
    <%= stylesheet_link_tag 'scpr-docs.css' %>
    <%= favicon_tag 'favicon.png' %>

    <script src="https://use.typekit.net/cka2qre.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

  </head>

  <body class="<%= page_classes %>">
    <header class="sg-header">
        <!-- start logo -->
        <div class="sg-header__title">
          <a href="/" title="Home">
            <svg class="sg-header__logo">
              <use xlink:href="<%= url_for "/img/scpr-sprite.svg#logo_kpcc-black" %>"/>
            </svg>
          </a>
        </div>
        <!--end logo -->

        <!-- start main navigation -->
        <nav class="sg-header__nav">
          <ul class="sg-nav">
              <li class="sg-nav__item">
                <a class="sg-nav__link" href="#page_url">Page Title</a>
              </li>
          </ul>
        </nav>
        <!-- end main navigation -->
    </header>

    <article class="sg-content">
      <%= yield %>
    </article>

    <footer class="sg-footer">
      <div class="sg-wrapper">
        <p class="sg-footer__heading">SCPR Style Guide</p>
      </div>
    </footer>
  </body>

  <%= javascript_include_tag 'scpr-docs.js' %>
  <%= javascript_include_tag 'scpr-style.js' %>
</html>
