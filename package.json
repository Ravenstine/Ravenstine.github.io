{
  "name": "scpr-style-guide",
  "version": "0.1.0",
  "description": "Product Style Guide for KPCC (Southern California Public Radio).",
  "main": "src/js/main.js",
  "scripts": {
    "clean": "rm -rf css/*.css && rm -rf img/* && rm -rf font/* && rm -rf js/* && npm run gem-clean",
    "build": "npm run build-css && npm run build-img && npm run compile-css && npm run build-js && npm run compile-js && npm run gem",
    "build-css": "mkdir -p ./css && node-sass ./src/css/main.scss ./css/scpr-style.css && npm run build-prefix",
    "build-js": "mkdir -p ./js && browserify ./src/js/main.js -o ./js/scpr-style.js",
    "build-prefix": "postcss --use autoprefixer css/scpr-style.css -o ./css/scpr-style.css",
    "build-img": "mkdir -p ./img && npm run copy-img && npm run svg",
    "compile-css": "cleancss ./css/scpr-style.css -o ./css/scpr-style-min.css",
    "compile-js": "uglifyjs ./js/scpr-style.js -o ./js/scpr-style-min.js",
    "copy-img": "cp -r ./img",
    "lint": "scss-lint -c t .scss-lint.yml",
    "svg": "gulp --gulpfile build/gulpfile.js svg-sprite",
    "test": "npm run test",
    "watch": "watch 'npm run build' ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SCPR/scpr-style-guide.git"
  },
  "author": "Southern California Public Radio",
  "license": "SEE LICENSE in LICENSE.md",
  "bugs": {
    "url": "https://github.com/SCPR/scpr-style-guide/issues"
  },
  "homepage": "https://github.com/SCPR/scpr-style-guide#readme",
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "browserify": "^13.0.0",
    "clean-css": "^3.4.9",
    "gulp": "^3.9.0",
    "gulp-cli": "^1.2.0",
    "gulp-svg-sprite": "^1.2.19",
    "node-sass": "^3.4.2",
    "postcss": "^5.0.14",
    "postcss-cli": "^2.3.3",
    "postcss-copy-assets": "^0.3.0",
    "postcss-sprites": "^3.0.3",
    "sass-lint": "^1.4.0",
    "uglify-js": "^2.6.1",
    "watch": "^0.17.1"
  }
}
